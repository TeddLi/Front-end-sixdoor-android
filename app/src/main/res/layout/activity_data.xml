        <Button
            android:id="@+id/dbt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="40dp"
            android:text="stimulated call" />

        <Button
            android:id="@+id/dbt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
